#!/bin/bash
#SBATCH --time=00:15:00
#SBATCH --ntasks-per-node=1
#SBATCH -C TitanX
#SBATCH --gres=gpu:1

. /etc/bashrc
. /etc/profile.d/modules.sh
module load openmpi/gcc/64
module load cuda10.0/toolkit/10.0.130

APP=./bitonic.out
ARGS=${1}
OMPI_OPTS="--mca btl ^usnic"

$MPI_RUN $OMPI_OPTS $APP $ARGS
